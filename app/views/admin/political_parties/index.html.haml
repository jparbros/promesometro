.page-header
  %h2 Partidos Politicos

= link_to 'Nuevo Partido Politico', new_admin_political_party_path

.well.row
  %h3 Filtros
  = form_for @search, :url => admin_political_parties_path do |form|
    .span7
      = label_tag :nombre
      .input
        .input-prepend
          %span.add-on
            = image_tag 'search.png'
          = form.text_field :name_contains, :class => 'large'
    .clearfix
      = form.submit 'Buscar', :class => 'btn'
      
%table.common-table.zebra-striped
  %thead
    %tr
      %td Nombre
      %td
      %td
  
  %tbody
    = render @political_parties
    
= paginate @political_parties