.page-header
  %h2 Nueva Promesa
= form_for [:admin, @official, @promise], :html => {:multipart => true} do |form|
  = render "admin/shared/error_messages", :target => @promise
  %fieldset
    = render :partial => 'form', :locals => {:form => form, :promise => @promise}
    .actions
      = form.submit 'Crear Promesa', :class => 'btn primary'
      %input{:type => 'reset', :class => 'btn', :value => 'Limpiar'}