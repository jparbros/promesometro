.page-header
  %h1 Promesa

%h2= @promise.title

%p
  = @promise.description
%p
  %strong
  Iniciada hace
  = time_ago_in_words(@promise.started_at) if @promise.started_at
  
.page-header
  %h3 Hitos

#milestones
  %ul
    - @promise.milestones.each do |milestone|
      %li
        = link_to milestone.name, "##{milestone.id}"

  = render :partial => 'show_milestone', :collection => @promise.milestones

.row
  .page-header
    %h3 Comentarios

  .government_comments.span8.columns
    %h3 Gobierno
    = render :partial => 'comment', :collection => @promise.comments.government
  
  .citizens_comments.span8.columns
    %h3 Ciudadanos
    = render :partial => 'comment', :collection => @promise.comments.citizens_approved
  
  = render :partial => 'comment_form', :locals => { :promise => @promise }
  
%script
  $(document).ready(function(){
  $("#milestones").tabs();
  })