.page-header
  %h2 Funcionarios

= link_to 'Nuevo Funcionario', new_admin_official_path(@official)

.well.row
  %h3 Filtros
  = form_for @search, :url => admin_officials_path do |form|
    .span7
      = label_tag :nombre
      .input
        .input-prepend
          %span.add-on
            = image_tag 'search.png'
          = form.text_field :name_contains, :class => 'large'
    .span7
      = label_tag :provincia
      .input
        .input-prepend
          %span.add-on
            = image_tag 'search.png'
          = form.text_field :province_name_contains, :class => 'large'
    .clearfix
      = form.submit 'Buscar', :class => 'btn'

