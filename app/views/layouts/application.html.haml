!!! 5
%html
  %head
    %title= Promesometro
    = include_stylesheets :app, :media => 'all'
    %link{:href => 'http://fonts.googleapis.com/css?family=Oswald|Open+Sans+Condensed:300|Anton', :rel => 'stylesheet', :type => 'text/css'}
    <!--[if IE]>
    %link{:href => "/stylesheets/ie.css", :media => "screen, projection", :rel => "stylesheet", :type => "text/css"}
    <![endif]-->
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js', 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js'
    = include_javascripts :app 
    = javascript_include_tag 'http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.0.6/modernizr.min.js'
    = csrf_meta_tag
    

  %body
    #container
      %header
        = image_tag 'logo.png', :id => 'logo'
        %nav
          %ul
            %li.no-border= link_to 'Inicio', root_path
            %li= link_to 'Promesas', promesas_path
            %li= link_to 'Directorio', directorio_path
            %li= link_to 'Contacto', directorio_path
          %ul.follow_us
            %li Siguenos en:
            %li= image_tag 'facebook.png'
            %li= image_tag 'twitter.png'
            %li= image_tag 'plus.png'
        #search_box
          #breadcums
            %span.estas_en Estas en:
            %span.breadcums= render_crumbs :links => false
          #search
            = render :partial => 'shared/search'
      .content
        = yield

      %footer
        %nav
          %ul
            %li.no-border= link_to 'Inicio', root_path
            %li= link_to 'Promesas', promesas_path
            %li= link_to 'Directorio', directorio_path
            %li= link_to 'Contacto', ''