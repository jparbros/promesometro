!!! 5
%html
  %head
    %title= Promesometro
    = stylesheet_link_tag "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css"
    = raw(stylesheet_link_merged(:admin_package))
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js', 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js'
    = raw(javascript_include_merged(:admin_package))
    = javascript_include_tag 'http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.0.6/modernizr.min.js'
    = csrf_meta_tag
    

  %body
    %header
      .topbar
        .fill
          .container
            %h3= link_to 'Promesometro', '/admin'
            %ul
              %li= link_to 'Funcionarios', admin_officials_path
              %li= link_to 'Temas', admin_topics_path
              %li= link_to 'Partidos Politicos', admin_political_parties_path
              %li= link_to 'Comentarios', admin_comments_path
        
    .container
      - if alert
        .alert-message.error
          = link_to 'x','#', :class => 'close'
          %p= alert
      - if notice
        .alert-message.info
          = link_to 'x','#', :class => 'close'
          %p= notice
      = yield
