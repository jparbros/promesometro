.row
  .span11.columns
    %h1= @promise.title
    - promesa_started_in_words(@promise)
    = link_to_official @promise.official
    .well.floatLeft
      .span2.columns
        = image_tag 'document_64.png'
      .span8.columns
        = @promise.description
    .well.floatLeft
      .span3.columns
        = image_tag @promise.official.photo(:profile)
      .span7.columns
        %p
          %b Puesto:
          = @promise.official.position_name
        %p
          %b Estado:
          = @promise.official.state.name
        -if @promise.official.province
          %p
            %b Provincia:
            = @promise.official.province.name
        %p
          %b Twitter:
          = link_to @promise.official.twitter, "http://www.twitter.com/#{@promise.official.twitter}", :target => '_blank'

        %p
          %b Facebook:
          = link_to @promise.official.facebook, "http://www.facebook.com/#{@promise.official.facebook}", :target => '_blank'
    %h2 Hitos
    #milestones
      %ul
        - @promise.milestones.each do |milestone|
          %li
            = link_to milestone.name, "##{milestone.id}"
      
      - @promise.milestones.each do |milestone|
        %div{:id => milestone.id}
          %h3= milestone.name
          %p= milestone.description
          Estado: 
          %b
            = milestone_states(milestone)
            - started_at_in_words(milestone)
          %div
            %h4 Gobierno
            = render :partial => 'comment', :collection => milestone.comments.government_approved
          %div
            %h4 Ciudadanos
            = render :partial => 'comment', :collection => milestone.comments.citizens_approved
          %div
            = render :partial => 'comment_form', :locals => {:milestone => milestone}
            
  .span5.columns
    = render :partial => 'shared/search'
    = render :partial => 'shared/topics'
    
%script
  $(document).ready(function(){
  $("#milestones").tabs();
  })