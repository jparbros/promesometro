%span.estado Agrega tu comentario

= form_for promise.comments.build, :url => hito_comentario_path(@promise) do |form|
  .nombre
    = form.label :nombre
    .input
      = form.text_field :author, :class => 'xlarge'
      
  .ta_comment
    = form.label :commentario
    .input
      = form.text_area :comment, :class => 'xlarge', :rows => 7
    = hidden_field_tag :email
      
  .actions
    = form.submit 'Publicar', :class => 'button'