- content_for :title, ":: Promesas"
#promesas
  .promesa_titulo
    %h1 Promesas
  .filtro-temas
    = select_tag :tema, options_from_collection_for_select(Topic.all, 'name','name', ((params[:search].nil?)? "" :  params[:search][:topics_contains])), :include_blank => 'temas'
  .promesa_estado_titulo
    %h1 Estado de la Promesa

  - titulo_filtro_promesas(@search.search_attributes)

  = render :partial => 'promesa', :collection => @promises
  - if @promises.empty?
    %h3
      No existen coincidencias para su busqueda

  = paginate @promises
  
