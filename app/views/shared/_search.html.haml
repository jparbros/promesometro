= form_for Promise.search, :url => promesas_path do |form|

  = select_tag('buscar_por', options_for_select([['Buscar Por','buscar_por'], ['Promesa','promesa'], ['Representante','representante'], ['Region','region'], ['Partido','partido']]), :class => 'buscar_por')

  = form.text_field :title_contains

  = form.text_field :official_name_contains, :class => 'hidden_field'

  = form.text_field :official_state_name_contains, :class => 'hidden_field'
  
  = form.text_field :official_political_party_name_contains, :class => 'hidden_field'

  = form.submit 'Buscar', :class => 'button_search'
