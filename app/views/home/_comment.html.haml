- official = comment.commentable.official if comment.government?
- state = comment.commentable.official_state_name.humanize
.comment
  %p.top
    %span.title 
      - if comment.government?
        = official.name
      - else
        Promesa de 
        - comment.commentable.topics.first.name.humanize
    %span.region= state unless comment.government?
    %span.date= comment.created_at.to_s(:date)
    - if comment.government?
      %br
      %span.gobierno
        Gobierno de
        = official.province ? official.province_name : official.state_name
  %p.comment_content
    = "\"#{comment.comment}\""
  %span.compartir 
    Compartir
    = image_tag 'share.png'